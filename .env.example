# ===========================================
# SUPABASE
# ===========================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ===========================================
# TWILIO (for SMS)
# ===========================================
# Get these from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# WEB PUSH (for mobile PWA notifications)
# ===========================================
# Generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@yourfacility.com

# ===========================================
# DEMO CONFIG
# ===========================================
# For the demo, hardcode the ED's phone number here
# SMS will be sent to this number when "Ready" is tapped
DEMO_FAMILY_PHONE=+1234567890
